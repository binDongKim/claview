<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="../css/signup.css">
  </head>
  <body>
    <div class="container">
      <header><% include ../partials/header %></header>
      <main>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <div class="panel panel-default">
          <div class="panel-body">
            <!-- SIGNUP FORM -->
            <form action="/signup" method="post">
              <div class="form-group">
                <input type="text" class="form-control input-lg" name="email" placeholder="Email">
              </div>
              <div class="form-group">
                <input type="text" class="form-control input-lg" name="name" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="password" class="form-control input-lg" name="password" placeholder="Password">
              </div>
              <div class="radio-div form-group">
                <label class="radio-inline">
                  <input type="radio" name="status" value="student"><span>Student</span>
                </label>
                <label class="radio-inline">
                  <input type="radio" name="status" value="professor"><span>Professor</span>
                </label>
              </div>
              <button type="submit" class="signup-signin-btn btn btn-primary btn-lg">Signup</button>
            </form>
          </div>
        </div>
        <p class="signup-signin-switch">Already have an account? <a href="/" class="btn btn-default">Signin</a></p>
      </main>
    </div>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>
