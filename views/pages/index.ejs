<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="../../css/index.css">
  </head>
  <body>
    <div class="container">
      <header><% include ../partials/header %></header>
      <main>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <div class="panel panel-default">
          <div class="panel-body">
            <!-- SIGNIN FORM -->
            <form data-toggle="validator" action="/signin" method="post">
              <div class="form-group">
                <input type="email" class="form-control input-lg" name="email" placeholder="Email" required>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input type="password" class="form-control input-lg" name="password" placeholder="Password" required>
                <div class="help-block with-errors"></div>
              </div>
              <button type="submit" class="signup-signin-btn btn btn-primary btn-lg">Signin</button>
            </form>
          </div>
        </div>
        <p class="signup-signin-switch">Need an account? <a href="/signup" class="btn btn-default">Signup</a></p>
      </main>
    </div>
  </body>
</html>
